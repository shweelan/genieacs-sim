{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "target": "es6",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "allowJs": true
  },
  "include": [
    "./src"
  ]
}